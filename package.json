{
  "name": "@wsg/mcgill-ds",
  "version": "1.0.0",
  "description": "McGill Design System - a set of components and styles to adhere to McGill U. standards.",
  "main": "src/mds.scss",
  "scripts": {
    "dev": "npm run docs",
    "build": "npm run build:copy-assets && npm run build:css",
    "build:copy-assets": "cp -r ./src/sass/assets/* dist/assets",
    "build:css": "npm run build:main-css && npm run build:css-components",
    "build:main-css": "sass --load-path=src/sass src/sass/mds.scss:dist/css/all/mds.css",
    "build:css-components": "sass --load-path=src/sass src/sass/components:dist/css/components",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "start-storybook -s ./src/ --ci --port=3001",
    "site:build": "parcel .site/index.html --out-dir ./tmp/site-tmp --no-cache --log-level 4",
    "docs": "run-p --race storybook site:build",
    "deploy": "echo \"No deploy yet!\" && exit 1",
    "demo": "parcel .examples/parcel-static-site/index.html --out-dir ./tmp/demo-build --no-cache --log-level 4"
  },
   "publishConfig": {
    "@wsg:registry":"https://gitlab.ncs.mcgill.ca/api/v4/projects/811/packages/npm/"
  },
  "keywords": [
    "CSS",
    "library",
    "framework",
    "components"
  ],
  "author": "Jesse Sutherland",
  "license": "ISC",
  "peerDependencies": {
    "line-awesome": "^1.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@storybook/svelte": "^5.3.5",
    "babel-loader": "^8.0.6",
    "file-loader": "^5.0.2",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.23.7",
    "svelte": "3.15.0",
    "svelte-loader": "^2.13.6",
    "svelte-preprocess": "^3.3.0"
  }
}
