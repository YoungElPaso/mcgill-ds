{
  "name": "mcgill-ds",
  "version": "1.0.0",
  "description": "McGill Design System - a set of components and styles to adhere to McGill U. standards.",
  "main": "src/mds.scss",
  "scripts": {
    "dev": "npm run docs",

    "build": "npm run build:copy-assets && npm run build:css",
    "build:copy-assets": "cp -r ./src/sass/assets/* dist/assets",
    "build:css": "npm run build:main-css && npm run build:css-components",
    "build:main-css": "sass --load-path=src/sass src/sass/mds.scss:dist/css/all/mds.css",
    "build:css-components": "sass --load-path=src/sass src/sass/components:dist/css/components",

    "test": "echo \"Error: no test specified\" && exit 1",

    "docs": "echo \"Not docs yet!\" && exit 1",

    "deploy": "echo \"No deploy yet!\" && exit 1",

    "demo": "parcel examples/parcel-static-site/index.html --out-dir ./demo-build --no-cache --log-level 4"    
  },
  "keywords": [
    "CSS",
    "library",
    "framework",
    "components"
  ],
  "author": "Jesse Sutherland",
  "license": "ISC",
  "peerDependencies": {
    "line-awesome": "^1.3.0"
  },
  "devDependencies": {
    "parcel-bundler": "^1.12.4",
    "sass": "^1.23.7"
  }
}
