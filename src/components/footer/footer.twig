<!-- TODO: Crap, think need to use Grid rather than flexbox here... -->
<footer data-testid="mds-footer" class="{{_defaultClass}} text-center md:flex justify-center items-center p-4 px-8 bg-black text-white ">
{% block footerChildren %}
  {# Use include strategy for simpler components (no children/slots/embeds). #}
  {% include './footer-logo.twig' with {"modifiers":"inline-block mr-8"} %}
  
  {# Uses the block strategy of componentization! #}
  {% embed '../box/box.twig' %}
    {% block content %}
      <small class="text-gray text-sm"> {{'Copyright &copy; 2021 McGill University. All rights reserved.' | t }}</small>
    {% endblock %}
  {% endembed %}

  {% embed '../box/box.twig' with {"modifiers": "" }%}
    {% block content %}
      <a href="#">Accessibility</a>
    {% endblock %}
  {% endembed %}

  {% embed '../box/box.twig' with {"modifiers": " "} %}
    {% block content %}
      <a href="#">Privacy notice</a>
    {% endblock %}
  {% endembed %}

  {% embed '../box/box.twig' with {"modifiers": " "}%}
    {% block content %}
      <a href="#">Contact us</a>
    {% endblock %}
  {% endembed %}
{% endblock %}
</footer>

