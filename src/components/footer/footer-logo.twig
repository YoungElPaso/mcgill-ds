{# Footer-Logo
  - Properties:
    - assetPath,
    - footerImage, 
    - modifiers.
#}

{# Provide assetPath fallback to a flat dir structure. #}
{% if assetPath is empty %}
<!-- TODO: this asset path is wrong; doesn't work on prod-build - fix it so it works on both! -->
  {% set assetPath = "/" %}
{% endif %}

{# Provide McGill Logo as the default.#}
{% if footerImage is empty %}
  {% set footerImage = "mcgill-logo.svg" %}
{% endif %}
<img src="{{assetPath}}{{footerImage}}" width="144" class="{{modifiers}}"/>
